@model InventoryManagement.Models.Computer

@{
    ViewData["Title"] = "Create";
}

<h1>Add Computer</h1>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="manufacturerSerialNumber" class="control-label">Manufacturer's Serial number</label>
                <input asp-for="manufacturerSerialNumber" class="form-control" />
                <span asp-validation-for="manufacturerSerialNumber" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="OfficeRoomNumber" class="control-label">Office Room Number</label>
                <input asp-for="OfficeRoomNumber" class="form-control" />
                <span asp-validation-for="OfficeRoomNumber" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="OfficeLocation" class="control-label">Office Location</label>
                <input asp-for="OfficeLocation" class="form-control" />
                <span asp-validation-for="OfficeLocation" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ComputerSpecification" class="control-label">Computer Specification</label>
                <input asp-for="ComputerSpecification" class="form-control" />
                <span asp-validation-for="ComputerSpecification" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="OperatingSystem" class="control-label">Operating System</label>
                <!--<input asp-for="OperatingSystem" class="form-control" />-->
                <select asp-for="OperatingSystem" class="form-control">
                    <option value="Windows 10">Windows 10</option>
                    <option value="Windows 7">Windows 7</option>
                    <option value="MacOS">MacOS</option>
                    <option value="Linux">Linux</option>
                </select>
                <span asp-validation-for="OperatingSystem" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="OwnerName" class="control-label">Owner's Name</label>
                <input asp-for="OwnerName" class="form-control" />
                <span asp-validation-for="OwnerName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="InstallationDate" class="control-label">Installation Date</label>
                <input asp-for="InstallationDate" class="form-control" />
                <span asp-validation-for="InstallationDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Price" class="control-label">Price</label>
                <input asp-for="Price" class="form-control" />
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>
            <div>
                <br />
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
