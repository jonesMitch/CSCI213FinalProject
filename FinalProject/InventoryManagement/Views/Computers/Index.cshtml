@model IEnumerable<InventoryManagement.Models.Computer>

@{
    ViewData["Title"] = "Index";
}

<h1>All Computers</h1>

<p>
    <a asp-action="Create">Add new computer</a>
</p>
<table class="table">
    <tr>
        <td>
            <form asp-controller="Computers" asp-action="Index">
                <table class="table" id="filtersTable">
                    <tr>
                        <td>
                            <input type="submit" value="Clear Filters" name="clear" />
                        </td>
                    </tr>
                    <tr>
                        <td>
                            <div class="wrapper">
                                <div class="twoEntryLabelBox"><label>Serial Number</label></div>
                                <div class="oneEntryEntryBox"><input type="text" name="searchSerialNumber" /></div>
                                <div class="oneEntrySubmitBox"><input type="submit" value="Filter" /></div>
                            </div>
                        </td>
                    </tr>
                    <tr>
                        <td>
                            <div class="wrapper">
                                <div class="twoEntryLabelBox"><label>Price Range</label></div>
                                <div class="entryLabel1"><label>To</label></div>
                                <div class="entryBox1"><input type="text" width="10" name="priceRangeStart" /></div>
                                <div class="entryBox2"><input type="text" width="10" name="priceRangeEnd" /></div>
                                <div class="twoEntrySubmitBox"><input type="submit" value="Filter" /></div>
                            </div>
                        </td>
                    </tr>
                    <tr>
                        <td>
                            <div class="wrapper">
                                <div class="twoEntryLabelBox"><label>Installation Date</label></div>
                                <div class="entryLabel1"><label>To</label></div>
                                <div class="entryBox1"><input type="date" name="dateRangeStart"/></div>
                                <div class="entryBox2"><input type="date" name="dateRangeEnd" /> </div>
                                <div class="twoEntrySubmitBox"><input type="submit" value="Filter" /></div>
                            </div>
                        </td>
                    </tr>
                    <tr>
                        <td>
                            <div class="wrapper">
                                <div class="labelBox"><label>Room Number</label></div>
                                <div class="oneEntryEntryBox"><input type="text" name="roomNumber" /></div>
                                <div class="oneEntrySubmitBox"><input type="submit" value="Filter" /></div>
                            </div>
                        </td>
                    </tr>
                </table>
            </form>
        </td>
        <th>
            <table class="table">
                <thead>
                    <tr>
                        <th>
                            <!--@Html.DisplayNameFor(model => model.manufacturerSerialNumber)-->
                            Manufacturer Serial Number
                        </th>
                        <th>
                            <!--@Html.DisplayNameFor(model => model.OfficeRoomNumber)-->
                            Room Number
                        </th>
                        <th>
                            <!--@Html.DisplayNameFor(model => model.OfficeLocation)-->
                            Office Location
                        </th>
                        <th>
                            <!--@Html.DisplayNameFor(model => model.ComputerSpecification)-->
                            Computer Specification
                        </th>
                        <th>
                            <!--@Html.DisplayNameFor(model => model.OperatingSystem)-->
                            Operating System
                        </th>
                        <th>
                            <!--@Html.DisplayNameFor(model => model.OwnerName)-->
                            Owner Name
                        </th>
                        <th>
                            <!--@Html.DisplayNameFor(model => model.InstallationDate)-->
                            Installation Date
                        </th>
                        <th>
                            <!--@Html.DisplayNameFor(model => model.Price)-->
                            Price
                        </th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
            @foreach (var item in Model) {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.manufacturerSerialNumber)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.OfficeRoomNumber)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.OfficeLocation)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.ComputerSpecification)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.OperatingSystem)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.OwnerName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.InstallationDate)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Price)
                        </td>
                        <td>
                            <a asp-action="Edit" asp-route-id="@item.id">Edit</a> |
                            <a asp-action="Details" asp-route-id="@item.id">Details</a> |
                            <a asp-action="Delete" asp-route-id="@item.id">Delete</a>
                        </td>
                    </tr>
            }
                </tbody>
            </table>
        </th>
    </tr>
</table>